@model IEnumerable<EmployeeVM>

@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><i class="bi bi-film"></i>Employees List</h2>
<hr />

<a class="btn btn-primary" asp-action="Create"><i class="bi bi-plus"></i>Add Employee</a>


<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi bi-exclamation-triangle"></i>
            No Employee found!
        </div>
    }
    else
    {
            <div class="container">
                <table id="example" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                             <th>
                               ID
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                               Department
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                               Date_Created
                            </th>
                            <th>
                               Created_By
                            </th>
                            <th>
                                Status 
                            </th>
                            <th>
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="font-size: 12px;font-weight: bold;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedAt)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreatedBy)
                                </td>
                                <td style="font-size: large;color:@item.Color;font-weight: bold">
                                    @Html.DisplayFor(modelItem => item.IsStillWorking)
                                </td>
                                 <td>
                                    <a href="@Url.Action("CloseDetails", new { id = item.EmployeeID })" class="btn btn btn-info">Show</a>
                                   
                                    <a asp-action="Details" asp-route-id="@item.EmployeeID" class="btn btn-outline-secondary">
                                        <i class="bi bi-camera-reels"></i>
                                        Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                        Edit
                                    </a>
                                    <a href="javascript:;" class="btn btn-danger js-delete" data-id="@item.EmployeeID">
                                        <i class="bi bi-trash"></i>
                                        Delete
                                    </a>
                                </td> 


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.js-delete').on('click', function () {
                var btn = $(this);

                bootbox.confirm({
                    message: "Are you sure that you need to delete this Employee?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-outline-secondary'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: '/Employees/delete/' + btn.data('id'),
                                success: function () {
                                    var EmployeeContainer = btn.parents('.col-12');
                                    EmployeeContainer.addClass('animate__animated animate__zoomOut');

                                    setTimeout(function () {
                                        EmployeeContainer.remove();
                                    }, 1000);

                                    toastr.success('Employees deleted');
                                },
                                error: function () {
                                    toastr.error('Something went wrong!');
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>
}